@layer base {
  .wrapper {
    min-height: 100vh;
    padding-top: var(--header-height);
    @apply my-0 mx-auto flex justify-center items-start flex-col;
  }

  main {
    @apply flex flex-col flex-auto w-full mx-auto pb-16;
  }
  @screen md {
    .wrapper {
      padding-top: var(--header-height-desktop);
    }
  }
}
